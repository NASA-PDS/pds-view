<?xml version="1.0" encoding="UTF-8"?>

<!--
  Harvest Tool Example Policy File

  This policy file corresponds with test bundle generated by the 
  Geosciences Node. By specifying the base path below, Harvest crawls 
  the directory structure recursively looking for files with an extension 
  of "xml".

  $Id$
-->

<policy>
  <directories>
     <path>$HOME/geosciences/mars_analog_data</path>
     <filePattern>*.xml</filePattern>
  </directories>
  <validation>
    <enabled>false</enabled>
  </validation>
  <candidates>
     <namespace prefix="common" uri="http://pds.nasa.gov/schema/pds4/common" default="true"/>
     <productMetadata objectType="character_table">
        <xPath>//Product_Identification_Area/creation_date_time</xPath>
        <xPath>//Subject_Area/full_name</xPath>
        <xPath>//Subject_Area/instrument_name</xPath>
        <xPath>//Subject_Area/observing_system_name</xPath>
        <xPath>//Table_Character/local_identifier</xPath>
        <xPath>//Table_Character/fields</xPath>
        <xPath>//Table_Character/records</xPath>
     </productMetadata>
  </candidates>
</policy>
