<project xmlns:ant="jelly:ant" xmlns:j="jelly:core"  xmlns:velocity="jelly:org.apache.commons.jelly.tags.velocity.VelocityTagLibrary">

  <!-- Process the xdoc templates for PDS generation. -->
  <postGoal name="pdf:prepare">
    <attainGoal name="pdf-setup"/>
  </postGoal>

  <goal name="pdf-setup">
    <velocity:merge name="${maven.build.dir}/pdf/install/index.xml"
                    basedir="${basedir}/src/site/xdoc/install"
                    template="index.xml.vm"/>
    <velocity:merge name="${maven.build.dir}/pdf/operate/index.xml"
                    basedir="${basedir}/src/site/xdoc/operate"
                    template="index.xml.vm"/>
    <velocity:merge name="${maven.build.dir}/pdf/install/index-win.xml"
                    basedir="${basedir}/src/site/xdoc/install"
                    template="index-win.xml.vm"/>
  </goal>
</project>

