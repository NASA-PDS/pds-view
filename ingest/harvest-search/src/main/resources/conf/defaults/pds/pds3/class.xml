<?xml version="1.0" encoding="UTF-8"?>
<product>
  <specification>
    <title>PDS3-Class</title>
    <query>
      <registryPath>objectType</registryPath>
      <value>Product_Class_Definition</value>
    </query>
    <query>
      <registryPath>status</registryPath>
      <value>Approved</value>
    </query>
    <checkAssociations>true</checkAssociations>
  </specification>

  <indexFields>
    <!-- Identifier Fields -->
    <field name="search_id" type="required">
      <outputString format="text">pds3:{lid}</outputString>
    </field>
    <field name="identifier" type="required">
      <registryPath>lid</registryPath>
    </field>
    <field name="version_id" type="string">
      <registryPath>version_id</registryPath>
    </field>
    <!-- Search UI Fields -->
    <!-- The resLocation field is not populated since there is no jump page. -->
    <field name="title" type="required">
      <registryPath>name</registryPath>
    </field>
    <field name="description" type="required">
      <registryPath>class_definition</registryPath>
    </field>
    <field name="data_product_type" type="required">
      <outputString format="text">Class_Definition</outputString>
    </field>
    <field name="data_class" type="string">
      <registryPath>data_class</registryPath>
    </field>
    <field name="objectType" type="string">
      <registryPath>objectType</registryPath>
    </field>
    <field name="pds_model_version" type="string">
      <registryPath>attribute_type</registryPath>
    </field>
    <field name="agency_name" type="string" default="nasa">
      <registryPath>node_ref.agency_ref.alternate_id</registryPath>
    </field>
    <!-- Identification_Area Fields -->
    <field name="product_class" type="string">
      <registryPath>product_class</registryPath>
    </field>
    <field name="alternate_id" type="string">
      <registryPath>alternate_id</registryPath>
    </field>
    <field name="alternate_title" type="string">
      <registryPath>alternate_title</registryPath>
    </field>
    <field name="citation_keyword" type="string">
      <registryPath>citation_keyword</registryPath>
    </field>
    <field name="modification_date" type="date">
      <registryPath>modification_date</registryPath>
    </field>
    <field name="modification_description" type="string">
      <registryPath>modification_description</registryPath>
    </field>
    <!-- DD_Class_Full Fields -->
    <field name="class_name" type="string">
      <registryPath>class_name</registryPath>
    </field>
    <field name="class_version_id" type="string">
      <registryPath>class_version_id</registryPath>
    </field>
    <field name="class_local_identifier" type="string">
      <registryPath>class_local_identifier</registryPath>
    </field>
    <field name="class_steward_id" type="string">
      <registryPath>class_steward_id</registryPath>
    </field>
    <field name="class_type" type="string">
      <registryPath>class_type</registryPath>
    </field>
    <field name="class_namespace_id" type="string">
      <registryPath>class_namespace_id</registryPath>
    </field>
    <field name="class_submitter_name" type="string">
      <registryPath>class_submitter_name</registryPath>
    </field>
    <field name="class_definition" type="string">
      <registryPath>class_definition</registryPath>
    </field>
    <field name="class_comment" type="string">
      <registryPath>class_comment</registryPath>
    </field>
    <field name="class_registered_by" type="string">
      <registryPath>class_registered_by</registryPath>
    </field>
    <field name="class_registration_authority_id" type="string">
      <registryPath>class_registration_authority_id</registryPath>
    </field>
    <field name="class_abstract_flag" type="string">
      <registryPath>class_abstract_flag</registryPath>
    </field>
    <field name="class_element_flag" type="string">
      <registryPath>class_element_flag</registryPath>
    </field>
    <field name="class_association_local_identifier" type="string">
      <registryPath>class_association_local_identifier</registryPath>
    </field>
    <field name="class_association_reference_type" type="string">
      <registryPath>class_association_reference_type</registryPath>
    </field>
    <field name="class_association_minimum_occurrences" type="string">
      <registryPath>class_association_minimum_occurrences</registryPath>
    </field>
    <field name="class_association_maximum_occurrences" type="string">
      <registryPath>class_association_maximum_occurrences</registryPath>
    </field>
    <field name="class_association_constant_value" type="string">
      <registryPath>class_association_constant_value</registryPath>
    </field>
    <field name="class_term_entry_name" type="string">
      <registryPath>class_term_entry_name</registryPath>
    </field>
    <field name="class_term_entry_definition" type="string">
      <registryPath>class_term_entry_definition</registryPath>
    </field>
    <field name="class_term_entry_language" type="string">
      <registryPath>class_term_entry_language</registryPath>
    </field>
    <field name="class_term_entry_preferred_flag" type="string">
      <registryPath>class_term_entry_preferred_flag</registryPath>
    </field>
  </indexFields>
</product>
